<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/gradient"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="600dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_cadastro"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:text="Informações pessoais"
            android:textColor="#CB636363"
            android:textSize="20dp" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:hint="Nome completo"
            android:id="@+id/ti_nome"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Data de Nascimento"
            android:id="@+id/ti_nasc"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"
            android:inputType="date"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:id="@+id/ti_email"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"
            android:inputType="textEmailAddress"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Celular (11) 910102020"
            android:id="@+id/ti_celular"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"
            android:inputType="phone"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Senha"
            android:id="@+id/ti_senha"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"
            android:inputType="textPassword"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="CPF"
            android:id="@+id/ti_cpf"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_input"
            android:inputType="numberDecimal"/>

        <CheckBox
            android:id="@+id/cb_termo"
            android:checked="false"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Eu aceito os temos de uso"
            android:textColor="#3DDBC4"/>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eu sou:"
                android:layout_marginTop="10dp"/>

            <CheckBox
                android:id="@+id/cb_juridica"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Juridica"
                android:textColor="#3DDBC4"
                android:onClick="cliqueiJuridica"/>

            <CheckBox
                android:id="@+id/cb_fisica"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fisica"
                android:textColor="#3DDBC4"
                android:onClick="cliqueiFisica"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>